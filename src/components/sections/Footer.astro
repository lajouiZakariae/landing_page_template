---
import GalleryImg1 from '~/assets/imgs/gallery/gallery-01.png';
import GalleryImg2 from '~/assets/imgs/gallery/gallery-02.png';
import GalleryImg3 from '~/assets/imgs/gallery/gallery-03.jpg';
import GalleryImg4 from '~/assets/imgs/gallery/gallery-04.png';
import GalleryImg5 from '~/assets/imgs/gallery/gallery-05.jpg';
import GalleryImg6 from '~/assets/imgs/gallery/gallery-06.png';
---

<div class="footer">
  <div class="container">
    <div class="box">
      <h3>Elzero</h3>
      <ul class="social">
        <li>
          <a href="#" class="facebook">
            <i class="fab fa-facebook-f"></i>
          </a>
        </li>
        <li>
          <a href="#" class="twitter">
            <i class="fab fa-twitter"></i>
          </a>
        </li>
        <li>
          <a href="#" class="youtube">
            <i class="fab fa-youtube"></i>
          </a>
        </li>
      </ul>
      <p class="text">
        Lorem ipsum, dolor sit amet consectetur adipisicing elit. Temporibus nulla rem, dignissimos iste aspernatur
      </p>
    </div>
    <div class="box">
      <ul class="links">
        <li><a href="#">Important Link 1</a></li>
        <li><a href="#">Important Link 2</a></li>
        <li><a href="#">Important Link 3</a></li>
        <li><a href="#">Important Link 4</a></li>
        <li><a href="#">Important Link 5</a></li>
      </ul>
    </div>
    <div class="box">
      <div class="line">
        <i class="fas fa-map-marker-alt fa-fw"></i>
        <div class="info">Egypt, Giza, Inside The Sphinx, Room Number 220</div>
      </div>
      <div class="line">
        <i class="far fa-clock fa-fw"></i>
        <div class="info">Business Hours: From 10:00 To 18:00</div>
      </div>
      <div class="line">
        <i class="fas fa-phone-volume fa-fw"></i>
        <div class="info">
          <span>+20123456789</span>
          <span>+20198765432</span>
        </div>
      </div>
    </div>
    <div class="box footer-gallery">
      <img src={GalleryImg1.src} alt="" />
      <img src={GalleryImg2.src} alt="" />
      <img src={GalleryImg3.src} alt="" />
      <img src={GalleryImg4.src} alt="" />
      <img src={GalleryImg5.src} alt="" />
      <img src={GalleryImg6.src} alt="" />
    </div>
  </div>
  <p class="copyright">Made With &lt;3 By Elzero</p>
</div>

<style lang="scss">
  @import '~/assets/scss/_vars.scss';

  .footer {
    background-color: #191919;
    padding: 70px 0 0;

    @media (max-width: 767px) {
      text-align: center;
    }

    .container {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 40px;
    }

    .box {
      h3 {
        color: white;
        font-size: 50px;
        margin: 0 0 20px;
      }

      .social {
        display: flex;

        @media (max-width: 767px) {
          justify-content: center;
        }

        li {
          margin-right: 10px;

          a {
            background-color: #313131;
            color: #b9b9b9;
            display: inline-flex;
            justify-content: center;
            align-items: center;
            width: 50px;
            height: 50px;
            font-size: 20px;
            transition: $main-transition;
          }
        }

        .facebook:hover {
          background-color: #1877f2;
        }

        .twitter:hover {
          background-color: #1da1f2;
        }

        .youtube:hover {
          background-color: #ff0000;
        }
      }

      .text {
        line-height: 2;
        color: #b9b9b9;
      }

      .links {
        li {
          padding: 15px 0;
          transition: $main-transition;

          &:not(:last-child) {
            border-bottom: 1px solid #444;
          }

          &:hover {
            padding-left: 10px;
          }

          &:hover a {
            color: white;
          }

          a {
            color: #b9b9b9;
            transition: $main-transition;

            &::before {
              font-family: 'Font Awesome 5 Free';
              content: '\F101';
              font-weight: 900;
              margin-right: 10px;
              color: $main-color;
            }
          }
        }
      }

      .line {
        display: flex;
        align-items: center;
        color: #b9b9b9;
        margin-bottom: 30px;

        @media (max-width: 767px) {
          flex-direction: column;
        }

        i {
          font-size: 25px;
          color: $main-color;
          margin-right: 10px;

          @media (max-width: 767px) {
            margin-right: 0;
            margin-bottom: 15px;
          }
        }

        .info {
          line-height: 1.7;
          flex: 1;

          span {
            display: block;
          }
        }
      }
    }

    .footer-gallery img {
      width: 78px;
      border: 3px solid white;
      margin: 2px;
    }

    .copyright {
      padding: 25px 0;
      text-align: center;
      color: white;
      margin: 50px 0 0;
      border-top: 1px solid #444;
    }
  }
</style>
