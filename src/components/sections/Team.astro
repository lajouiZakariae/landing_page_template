---
import MainTitle from '../MainTitle.astro';
import Spikes from '../Spikes.astro';
import Team1 from '~/assets/imgs/team/team-01.jpg';
import Team2 from '~/assets/imgs/team/team-02.jpg';
import Team3 from '~/assets/imgs/team/team-03.jpg';
import Team4 from '~/assets/imgs/team/team-04.jpg';
import Team5 from '~/assets/imgs/team/team-05.png';
import Team6 from '~/assets/imgs/team/team-06.png';
import Team7 from '~/assets/imgs/team/team-07.jpg';
import Team8 from '~/assets/imgs/team/team-08.jpg';

const team = [
  { img: Team1 },
  { img: Team2 },
  { img: Team3 },
  { img: Team4 },
  { img: Team5 },
  { img: Team6 },
  { img: Team7 },
  { img: Team8 },
];
---

<>
  <section id="team">
    <MainTitle>Team Members</MainTitle>
    <div class="container">
      {
        team.map((member) => (
          <div class="box">
            <div class="data">
              <img src={member.img.src} alt="" />

              <div class="social">
                <a href="#">
                  <i class="fab fa-facebook-f" />
                </a>
                <a href="#">
                  <i class="fab fa-twitter" />
                </a>
                <a href="#">
                  <i class="fab fa-linkedin-in" />
                </a>
                <a href="#">
                  <i class="fab fa-youtube" />
                </a>
              </div>
            </div>
            <div class="info">
              <h3>Name</h3>
              <p>Simple Short Description</p>
            </div>
          </div>
        ))
      }
    </div>
  </section>
  <Spikes />
</>

<style lang="scss">
  @import '~/assets/scss/_vars.scss';

  section {
    padding-top: $main-padding-top;
    padding-bottom: $main-padding-bottom;
    position: relative;

    .container {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 30px;
    }

    .box {
      position: relative;

      &::before,
      &::after {
        content: '';
        background-color: #f3f3f3;
        position: absolute;
        right: 0;
        top: 0;
        height: 100%;
        border-radius: 10px;
        transition: $main-transition;
      }

      &::before {
        width: calc(100% - 60px);
        z-index: -2;
      }

      &::after {
        z-index: -1;
        background-color: #e4e4e4;
        width: 0;
      }

      &:hover::after {
        width: calc(100% - 60px);
      }

      &:hover img {
        filter: grayscale(100%);
      }

      .data {
        display: flex;
        align-items: center;
        padding-top: 60px;

        img {
          width: calc(100% - 60px);
          transition: $main-transition;
          border-radius: 10px;
        }

        .social {
          width: 60px;
          display: flex;
          flex-direction: column;
          align-items: center;
          gap: 20px;

          a {
            width: 60px;
            height: 30px;
            display: flex;
            justify-content: center;
            align-items: center;

            &:hover i {
              color: $main-color;
            }
          }

          i {
            color: #777;
            transition: $main-transition;
          }
        }
      }

      .info {
        padding-left: 80px;

        h3 {
          margin-bottom: 0;
          color: $main-color;
          font-size: 22px;
          transition: $main-transition;
        }

        p {
          margin-top: 10px;
          margin-bottom: 25px;
        }

        &:hover .info h3 {
          color: #777;
        }
      }
    }
  }
</style>
