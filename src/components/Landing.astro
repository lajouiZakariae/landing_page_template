---
import GoDown from './GoDown.astro';
import LandingImage from '~/assets/imgs/landing-image.png';
---

<section class="landing">
  <div class="container">
    <div class="text">
      <h1>Welcome, To Elzero World</h1>
      <p>Here Iam gonna share everything about my life. Books Iam reading, Games Iam Playing, Stories and Events</p>
    </div>
    <div class="image">
      <img src={LandingImage.src} alt="Image" />
    </div>
  </div>
  <GoDown />
</section>

<style lang="scss">
  section {
    position: relative;

    &::before {
      content: '';
      position: absolute;
      left: 0;
      top: -40px;
      width: 100%;
      height: 100%;
      background-color: #ececec;
      z-index: -1;
      transform: skewY(-6deg);
      transform-origin: top left;
    }

    .container {
      min-height: calc(100vh - 72px);
      display: flex;
      align-items: center;
      padding-bottom: 120px;
    }

    .text {
      flex: 1;
      @media (max-width: 767px) {
        text-align: center;
      }

      h1 {
        font-size: 40px;
        margin: 0;
        letter-spacing: -2px;

        @media (max-width: 767px) {
          font-size: 28px;
        }
      }

      p {
        font-size: 23px;
        line-height: 1.7;
        margin: 5px 0 0;
        color: #666;
        max-width: 500px;

        @media (max-width: 991px) {
          margin: 10px auto;
        }

        @media (max-width: 767px) {
          font-size: 18px;
        }
      }
    }

    .image {
      @media (max-width: 991px) {
        display: none;
      }

      img {
        position: relative;
        width: 600px;
        animation: up-and-down 5s linear infinite;
      }
    }
  }

  @keyframes up-and-down {
    0%,
    100% {
      top: 0;
    }
    50% {
      top: -50px;
    }
  }
</style>
