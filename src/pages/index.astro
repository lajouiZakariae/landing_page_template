---
import '~/assets/css/all.min.css';
import '~/assets/css/normalize.css';
import Layout from '~/layouts/Layout.astro';
import Header from '~/components/sections/Header.astro';
import Landing from '~/components/sections/Landing.astro';
import Articles from '~/components/sections/Articles.astro';
import Gallery from '~/components/sections/Gallery.astro';
import Features from '~/components/sections/Features.astro';
import Testemonials from '~/components/sections/Testemonials.astro';
import Team from '~/components/sections/Team.astro';
import Services from '~/components/sections/Services.astro';
import Skills from '~/components/sections/Skills.astro';
import WorkSteps from '~/components/sections/WorkSteps.astro';
import Events from '~/components/sections/Events.astro';
import Pricing from '~/components/sections/Pricing.astro';
import Videos from '~/components/sections/Videos.astro';
import Stats from '~/components/sections/Stats.astro';
import Discount from '~/components/sections/Discount.astro';
import Footer from '~/components/sections/Footer.astro';

const links = [
  { url: '#articles', text: 'Articles' },
  { url: '#gallery', text: 'Gallery' },
  { url: '#features', text: 'Features' },
  { url: '#about', text: 'About' },
];
---

<Layout>
  <Header links={links} />
  <Landing />
  <Articles />
  <Gallery />
  <Features />
  <Testemonials />
  <Team />
  <Services />
  <Skills />
  <WorkSteps />
  <Events />
  <Pricing />
  <Videos />
  <Stats />
  <Discount />
  <Footer />
</Layout>

<style lang="scss" is:global>
  /* Start Global Rules */
  * {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
  }
  html {
    scroll-behavior: smooth;
  }
  body {
    font-family: 'Cairo', sans-serif;
  }
  a {
    text-decoration: none;
  }
  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  .container {
    padding-left: 15px;
    padding-right: 15px;
    margin-left: auto;
    margin-right: auto;
  }
  /* Small */
  @media (min-width: 768px) {
    .container {
      width: 750px;
    }
  }
  /* Medium */
  @media (min-width: 992px) {
    .container {
      width: 970px;
    }
  }
  /* Large */
  @media (min-width: 1200px) {
    .container {
      width: 1170px;
    }
  }
</style>
